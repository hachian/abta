const enabledPlatforms = Object.entries(config.socialLinks)
	.filter(([key, platform]) => platform.enabled && platform.url)
	.map(([key, platform]) => ({ key, ...platform }));
---

<div class={`social-links ${className}`}>
	{enabledPlatforms.map(({ key, url }) => {
		const platform = socialPlatforms[key];
		if (!platform) return null;
		
		return (
			<a href={url} target="_blank" rel="noopener noreferrer">
				<span class="sr-only">{platform.label}</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
					<path fill="currentColor" d={platform.path}></path>
				</svg>
			</a>
		);
	})}
</div>

<style>
	.social-links {
		display: flex;
		gap: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: var(--primary-foreground);
		transition: opacity 0.2s ease;
	}
	.social-links a:hover {
		opacity: 0.7;
	}
</style>