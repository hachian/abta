---
import SocialLinks from './SocialLinks.astro';
import { FOOTER } from '../consts';

const today = new Date();
const currentYear = today.getFullYear();

// 年表示のロジック
let yearDisplay = currentYear.toString();
if (FOOTER.START_YEAR && FOOTER.START_YEAR < currentYear) {
	yearDisplay = `${FOOTER.START_YEAR}-${currentYear}`;
}
---

<footer>
	&copy; {yearDisplay} {FOOTER.COPYRIGHT_TEXT}
	<SocialLinks class="footer-social-links" />
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--primary-background) 0%, oklch(92% 0.02 262) 100%) no-repeat;
		color: var(--primary-foreground);
		text-align: center;
	}
	:global(.footer-social-links) {
		justify-content: center;
		margin-top: 1em;
	}
</style>
