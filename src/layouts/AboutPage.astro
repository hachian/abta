---
import type { ImageMetadata } from 'astro';
import PageLayout from '../components/PageLayout.astro';

interface Props {
	title: string;
	description: string;
	heroImage?: ImageMetadata;
}

const { title, description, heroImage } = Astro.props;

// AboutPage構造化データ
const aboutPageSchema = {
	"@context": "https://schema.org",
	"@type": "AboutPage",
	"name": title,
	"description": description,
	"url": new URL(Astro.url.pathname, Astro.site).href,
	"inLanguage": "ja",
	"isPartOf": {
		"@type": "WebSite",
		"name": "ABTA",
		"url": Astro.site?.href
	},
	"mainEntity": {
		"@type": "WebSite",
		"name": "ABTA",
		"description": "Astro Blog Tags Archive - 日本語ブログ執筆者向けに最適化されたAstroベースのブログテンプレート"
	}
};

// パンくずリスト用データ
const breadcrumbItems = [
	{ name: 'ホーム', url: '/' },
	{ name: title }
];
---

<PageLayout
	title={title}
	description={description}
	heroImage={heroImage}
	breadcrumbItems={breadcrumbItems}
	schema={aboutPageSchema}
	maxWidth="medium"
>
	<slot />
</PageLayout>